<li id="<%= book_search_result_item.id %>">
  <%= image_tag "bookworm.jpg" , class: "book_image"%><br />
	<span12 class="user">
	  <%= link_to book_search_result_item.user.name, book_search_result_item.user %>
	</span12>
	<span12 class="title_book"><%= book_search_result_item.title %></span12>
	<span12 class="author_book"><%= book_search_result_item.author %></span12>
		<span12 class="timestamp">
		  Posted <%= time_ago_in_words(book_search_result_item.created_at) %> ago.
		</span12>
	  <% if current_user?(book_search_result_item.user) %>
		<%= link_to "delete", book_search_result_item, method: :delete,
		                                 data: { confirm: "You sure?" },
		                                 title: book_search_result_item.title %>
	  <% end %>
</li>